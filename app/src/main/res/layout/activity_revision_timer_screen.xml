<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gkjt.github.io.examrevisiontracker.RevisionTimerScreenActivity"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="--"
        android:id="@+id/revision_timer_countdown"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="@color/textBlack"
        android:textSize="96sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timer_screen_subject"
        android:id="@+id/currently_revising_label"
        android:layout_marginTop="48dp"
        android:textColor="@color/textBlack"
        android:layout_marginLeft="12dp"
        android:layout_alignStart="@+id/revision_timer_countdown"
        android:layout_below="@+id/revision_timer_countdown" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_play_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_pause_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Hour"
            android:id="@+id/stop_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />

    </LinearLayout>

</RelativeLayout>
