<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<fragment xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/subject_fragment"
			  android:layout_width="0dp"
			  android:layout_weight="2"
			  android:layout_height="match_parent"
			  android:name="gkjt.github.io.examrevisiontracker.views.SubjectListFragment"
			  tools:layout="@layout/fragment_subject_list">
	</fragment>

	<fragment xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/exam_fragment"
			  android:layout_width="0dp"
			  android:layout_weight="3"
			  android:layout_height="match_parent"
			  android:name="gkjt.github.io.examrevisiontracker.views.ExamListFragment"
			  tools:layout="@layout/fragment_exam_list">
	</fragment>

</LinearLayout>